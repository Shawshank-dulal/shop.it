<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_cart"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="360dp"
    android:height="640dp"
    android:viewportWidth="360"
    android:viewportHeight="640">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="0dp"
        android:layout_marginTop="15dp"
        app:icon="@drawable/arrow_left"
        app:iconSize="20dp"
        app:iconTint="@color/black" />
f
    <TextView
        android:id="@+id/my_orders"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="152dp"
        android:fontFamily="@font/orbitron"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/my_orders"
        android:textSize="25dp"
        android:translationY="-0.44sp" />

    <RelativeLayout
        android:id="@+id/order_1"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/my_orders"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="111dp"
        android:background="@drawable/rectangle_border"
        android:orientation="horizontal"
        android:gravity="left"
        android:viewportWidth="300"
        android:viewportHeight="160">

        <ImageView
            android:id="@+id/product1_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/product_1"/>

        <TextView
            android:id="@+id/watch"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="15sp"
            android:text="@string/watch"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="16sp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_icon"
            android:gravity="top" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/watch"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginRight="141dp"
            android:layout_weight="1"
            android:text="250$"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/qty_adjustment"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="106dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="16sp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/qty_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:layout_marginEnd="25dp"
                android:text="1"
                android:layout_marginRight="25dp" />

            <ImageButton
                android:layout_width="15sp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/plus" />

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/order_2"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_below="@+id/order_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="111dp"
        android:background="@drawable/rectangle_border"
        android:orientation="horizontal"
        android:viewportWidth="300"
        android:viewportHeight="160">

    </LinearLayout>

</RelativeLayout>
